 <button id="btn"> start calculations</button>
  
  <script type="text/javascript" language="javascript" >
  
      btn.onclick = function() {
var x=parseInt(prompt("enter value 1"));
var y=parseInt(prompt("enter value 2"));
var z=parseInt(prompt("press (1 for +),(2 for -  ),(3 for multiple ),(4 for division)" ));
    
    switch(z) {
        case 1 :
        z=x+y;
        document.write(z);
        break;
        
        case 2 :
        z=x-y;
        document.write(z);
        break;
        
        case 3 :
        z=x*y;
        document.write(z);
        break;
        
        case 4 :
        z=x/y;
        document.write(z);
        break;
        
        default :
        document.write("error");
    }
    
      } ;
  </script>

